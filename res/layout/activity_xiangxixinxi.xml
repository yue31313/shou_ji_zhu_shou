        android:divider="@null" >
    </ListView>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>