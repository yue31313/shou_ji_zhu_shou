<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/jinchengtubiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/android_mach" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/jinchengming"
        android:focusable="false"
        android:clickable="false" />

    <TextView
        android:id="@+id/jinchengming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/jinchengtubiao"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/neirongtishi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jinchengming"
        android:layout_alignLeft="@+id/jinchengming"
        android:text="TextView" />

</RelativeLayout>
