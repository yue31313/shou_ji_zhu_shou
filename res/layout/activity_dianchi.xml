<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">

    <TabWidget
        android:id="@android:id/tabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="24dp" >
    </TabWidget>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn_bg" >

        <RelativeLayout
            android:id="@+id/biaotianniu1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/channelgallery_bg" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/battery_manager" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="电池监控" />

        </RelativeLayout>

        <RelativeLayout
             android:id="@+id/biaotianniu2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_bg" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:src="@drawable/battery_fix" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="电池维护" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
         android:id="@+id/buju1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:background="@drawable/background"
       android:visibility="gone" >

        <ImageView
            android:id="@+id/dianhuantu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="34dp"
            android:src="@drawable/bt70" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/dianhuantu"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/dianhuantu"
            android:text="当前电量" 
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/xianshidianliangde"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/dianhuantu"
            android:layout_alignLeft="@+id/textView3"
            android:layout_marginBottom="20dp"
            android:text="81%"
            android:textColor="#2B9C1B"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="电池状态 ："
             android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/dianchizhuangtai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:text="TextView"
 android:textColor="#2B9C1B"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="38dp"
            android:text="電池溫度"
             android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/dianchiwendu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignLeft="@+id/dianchizhuangtai"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="40dp"
            android:text="電池電壓"
             android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/dianchidianya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView9"
            android:layout_alignLeft="@+id/dianchiwendu"
            android:text="TextView"
             android:textColor="#2B9C1B" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/dianchishiyongzhuangkuang"
            android:layout_alignBottom="@+id/dianchishiyongzhuangkuang"
            android:layout_toLeftOf="@+id/textView4"
            android:text="TextView"
            android:textColor="#2B9C1B" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView9"
            android:layout_marginTop="45dp"
            android:text="电池使用状态" 
             android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/dianchishiyongzhuangkuang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toRightOf="@+id/dianhuantu"
            android:text="TextView" 
              android:textColor="#2B9C1B"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="19dp"
            android:text="充电方式"
             android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/chongdianfangshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_toRightOf="@+id/textView4"
            android:text="未充电" 
            android:textColor="#2B9C1B" />

    </RelativeLayout>

    <RelativeLayout
          android:id="@+id/buju2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout1"
        android:background="@drawable/background"
        >

        <TextView
            android:id="@+id/dianchizhuangtai2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/dianchihuantu2"
            android:layout_marginTop="23dp"
            android:layout_toRightOf="@+id/dianchisgiyongzhuangtaide"
            android:text="未充电"
            android:textColor="#2B9C1B" />


        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/dianchihuantu2"
            android:layout_marginTop="24dp" >

            <ImageView
                android:id="@+id/dengpao2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/battery_bulb_deactive" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/dengpao2"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/dengpao2"
                android:src="@drawable/battery_rightarrow" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView8"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@+id/dengpao3"
                android:src="@drawable/battery_rightarrow" />

            <ImageView
                android:id="@+id/dengpao3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="38dp"
                android:src="@drawable/battery_bulb_deactive" />

            <ImageView
                android:id="@+id/dengpao1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="31dp"
                android:src="@drawable/battery_bulb_deactive" />
        </RelativeLayout>

        <TextView
            android:id="@+id/xunhuan"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/kuaisu"
            android:layout_alignBottom="@+id/kuaisu"
            android:layout_centerHorizontal="true"
            android:text="2.循环充电等待中" />

        <TextView
            android:id="@+id/kuaisu"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/relativeLayout1"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="21dp"
            android:text="1.快速充电等待中\n" />


        <TextView
            android:id="@+id/woliu"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/xunhuan"
            android:layout_alignBottom="@+id/xunhuan"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:text="3.涡流充电等待中" />

        <SlidingDrawer
            android:id="@+id/slidingDrawer1"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/kuaisu"
            android:content="@+id/content"
            android:handle="@+id/handle" >

            <Button
                android:id="@+id/handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <ScrollView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="健康小巴士：\n   电量低于10%时打开电池维护，为您进行健康充电，建议每月进行一次健康充电，保养电池 \n快速充电阶段：使用恒流进行快速充电，快速将电池充到80%，建议继续进行，将手机电池充满。\n循环充电阶段：电量即将充满的状态。\n涓流充电：保持充电状态。
" />

            </ScrollView>
        </SlidingDrawer>

        <TextView
            android:id="@+id/dianchisgiyongzhuangtaide"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/kuaisu"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="15dp"
            android:text="电池正常使用中"
            android:textColor="#2B9C1B" />

        <ImageView
            android:id="@+id/dianchihuantu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dianchisgiyongzhuangtaide"
            android:layout_below="@+id/dianchisgiyongzhuangtaide"
            android:layout_marginTop="32dp"
            android:src="@drawable/bt70" />

    </RelativeLayout>

</RelativeLayout>